# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.go]
indent_style = tab
indent_size = 4

[{*.yaml,*.yml}]
indent_size = 2
indent_style = space

[{*.json,*.code-workspace}]
indent_style = space
indent_size = 2
insert_final_newline = false
trim_trailing_whitespace = true

[{Makefile,makefile,*.mk}]
indent_style = tab
indent_size = 4

[Dockerfile*]
indent_style = tab
indent_size = 4

[*.sh]
indent_style = space
indent_size = 4

[*.bash]
indent_style = space
indent_size = 4

[*.proto]
indent_style = space
indent_size = 2

[grub.cfg]
indent_style = tab
indent_size = 4
